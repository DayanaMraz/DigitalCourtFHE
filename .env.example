# Digital Court System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Network RPC URLs
# =============================================================================

# Sepolia Testnet RPC URL
# Get your API key from:
# - Alchemy: https://www.alchemy.com/
# - Infura: https://www.infura.io/
# - Or use public RPC: https://rpc.sepolia.org
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-ALCHEMY-API-KEY

# Alternative RPC providers (uncomment if needed)
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR-INFURA-API-KEY
# SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Mainnet RPC URL (for mainnet deployment)
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-ALCHEMY-API-KEY

# =============================================================================
# Wallet Configuration
# =============================================================================

# Deployer wallet private key (without 0x prefix)
# SECURITY WARNING: Never commit this file with real private keys!
# Use a dedicated deployment wallet with limited funds
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Optional: Multi-sig wallet for production
# MULTISIG_WALLET=0x0000000000000000000000000000000000000000

# Optional: Pauser role wallet (for emergency pause functionality)
# PAUSER_WALLET=0x0000000000000000000000000000000000000000

# =============================================================================
# Contract Access Control
# =============================================================================

# Initial owner address (defaults to deployer if not set)
# OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# Judge addresses (comma-separated for multiple judges)
# JUDGE_ADDRESSES=0x0000000000000000000000000000000000000000,0x0000000000000000000000000000000000000000

# Initial certified jurors (comma-separated)
# INITIAL_JURORS=0x0000000000000000000000000000000000000000,0x0000000000000000000000000000000000000000

# =============================================================================
# Contract Configuration
# =============================================================================

# Voting duration in seconds (default: 259200 = 3 days)
# VOTING_DURATION=259200

# Minimum number of jurors per case (default: 3)
# MIN_JURORS=3

# Maximum number of jurors per case (default: 12)
# MAX_JURORS=12

# Initial juror reputation score (default: 100)
# INITIAL_REPUTATION=100

# =============================================================================
# Etherscan Configuration
# =============================================================================

# Etherscan API key for contract verification
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# Gas and Performance Configuration
# =============================================================================

# Gas price (in gwei) - leave empty for automatic
# GAS_PRICE=20

# Gas limit - leave empty for automatic estimation
# GAS_LIMIT=5000000

# Maximum gas price willing to pay (in gwei)
# MAX_GAS_PRICE=100

# Gas price strategy: "fast" | "standard" | "slow"
# GAS_STRATEGY=standard

# =============================================================================
# Testing and Development
# =============================================================================

# Report gas usage in tests
REPORT_GAS=true

# CoinMarketCap API key for gas cost in USD
# Get from: https://coinmarketcap.com/api/
# COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Forking mainnet for testing (optional)
# FORK_MAINNET=false
# FORK_BLOCK_NUMBER=

# =============================================================================
# CI/CD Configuration
# =============================================================================

# Codecov token for coverage reporting
# Get from: https://codecov.io
# CODECOV_TOKEN=your_codecov_token_here

# Slither security analysis
# SLITHER_ENABLED=true

# =============================================================================
# Monitoring and Alerts
# =============================================================================

# Defender Relay API credentials (for automated operations)
# DEFENDER_API_KEY=your_defender_api_key
# DEFENDER_API_SECRET=your_defender_secret_key

# Tenderly project configuration (for monitoring)
# TENDERLY_PROJECT_ID=your_project_id
# TENDERLY_ACCESS_KEY=your_access_key

# Discord webhook for deployment notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK

# Slack webhook for alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WEBHOOK

# =============================================================================
# Security Configuration
# =============================================================================

# Enable security checks before deployment
SECURITY_CHECKS_ENABLED=true

# Require manual approval for mainnet deployment
MAINNET_APPROVAL_REQUIRED=true

# Enable rate limiting for API calls
RATE_LIMIT_ENABLED=true

# Maximum failed attempts before lockout
MAX_FAILED_ATTEMPTS=3

# =============================================================================
# Frontend Configuration (if applicable)
# =============================================================================

# API endpoint for frontend
# NEXT_PUBLIC_API_URL=https://api.example.com

# Contract address (populated after deployment)
# NEXT_PUBLIC_CONTRACT_ADDRESS=

# Enable analytics
# NEXT_PUBLIC_ANALYTICS_ID=

# =============================================================================
# Database Configuration (if using off-chain storage)
# =============================================================================

# Database connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/digital_court

# Redis for caching
# REDIS_URL=redis://localhost:6379

# IPFS configuration for evidence storage
# IPFS_API_URL=https://ipfs.infura.io:5001
# IPFS_API_KEY=your_ipfs_api_key
# IPFS_API_SECRET=your_ipfs_secret

