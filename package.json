{
  "name": "digital-court-system",
  "version": "1.0.0",
  "description": "Digital Court System with FHE Privacy Voting",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "typecheck": "tsc --noEmit",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint --ext .js,.ts .",
    "lint:fix": "npm run lint:sol -- --fix && npm run lint:ts -- --fix",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "format": "npm run prettier:write",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:security": "npm run security:slither && npm run security:mythril",
    "coverage": "hardhat coverage",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:deploy": "hardhat run scripts/deploy.js --network sepolia",
    "hardhat:verify": "hardhat run scripts/verify.js --network sepolia",
    "hardhat:interact": "hardhat run scripts/interact.js --network sepolia",
    "hardhat:simulate": "hardhat run scripts/simulate.js --network localhost",
    "hardhat:node": "hardhat node",
    "hardhat:clean": "hardhat clean",
    "hardhat:size": "hardhat size-contracts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "node scripts/security-check.js",
    "security:slither": "echo 'Run: slither . --detect reentrancy-eth,tx-origin'",
    "security:mythril": "echo 'Run: myth analyze contracts/DigitalCourt.sol'",
    "performance:test": "node scripts/performance-test.js",
    "performance:optimize": "node scripts/optimize-gas.js",
    "gas:analyze": "REPORT_GAS=true npm test",
    "gas:optimize": "npm run performance:optimize",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm run prettier:check && npm run typecheck",
    "pre-push": "npm test",
    "clean": "hardhat clean && rm -rf cache artifacts coverage",
    "validate": "npm run lint && npm run typecheck && npm test && npm run security:check"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ethers": "^6.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/mocha": "^10.0.6",
    "@types/chai": "^4.3.11",
    "typescript": "^5.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^2.0.2",
    "hardhat-contract-sizer": "^2.10.0",
    "solidity-coverage": "^0.8.5",
    "dotenv": "^16.3.1",
    "solhint": "^4.1.0",
    "solhint-plugin-prettier": "^0.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chai": "^4.4.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "*.sol": [
      "solhint",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}